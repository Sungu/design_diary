<main class="mdl-layout__content mdl-color--grey-100">
  <div id="demo">
    <div class="table-responsive-vertical shadow-z-1">
    <!-- Table starts here -->
    <table id="table" class="table table-hover table-mc-light-blue">
        <thead>
          <tr>
            <th style="text-align:center">항목</th>
            <th style="text-align:center">내용</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td style="text-align: center;">Title</td>
            <td><%= @post.title %></td>      
          </tr>
          <tr>
            <td style="text-align: center;">Plan</td>
            <td><%= simple_format(@post.plan) %></td>
          <tr>
            <td style="text-align: center;">Research</td>
            <td><%= simple_format(@post.research) %></td>
          </tr>
          <tr>
            <td style="text-align: center;">Act</td>
            <td><%= simple_format(@post.act) %></td>
          <tr>
            <td style="text-align: center;">Observe</td>
            <td><%= simple_format(@post.observe_thing) %></td>
          </tr>
          <tr>
            <td style="text-align: center;">Evaluate</td>
            <td><%= simple_format(@post.evaluate) %></td>
          <tr>
            <td style="text-align: center;">Reflect</td>
            <td><%= simple_format(@post.reflect) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="text-center" style="margin-bottom: 30px">
    <% if current_user.id == @post.user_id %>
      <%= link_to '수정', "/diary/edit/#{@post.id}", class: 'btn btn-default' %>
      <%= link_to '삭제', "/diary/delete/#{@post.id}", class: 'btn btn-default' %>
    <% end %>
    <%= link_to '뒤로가기', :back , class: 'btn btn-default' %>
  </div>
</main>