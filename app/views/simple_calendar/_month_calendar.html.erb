<div class="simple-calendar"style="margin-top: 30px; margin-left: 30px;margin-right:30px;margin-bottom:30px;">
  <%= link_to "<", calendar.url_for_previous_view %>
  <b style="font-size: 2em"><%= start_date.month %>월</b>
  <%= link_to ">", calendar.url_for_next_view %>

  <table class="table table-striped">
    <thead>
      <tr>
          <th>월</th>
          <th>화</th>
          <th>수</th>
          <th>목</th>
          <th>금</th>
          <th>토</th>
          <th>일</th>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(block) %>
                <% capture_haml do %>
                  <% block.call day, sorted_events.fetch(day, []) %>
                <% end %>
              <% else %>
                <% if start_date.month == day.month %>
                  <%= day.day %>일
                
                  <% @post.each do |a| %>
                    <% if "#{a.created_at.year}-#{a.created_at.month}-#{a.created_at.day}" == "#{day.year}-#{day.month}-#{day.day}" %>
                      <br>
                      <a href="/diary/show/<%= a.id %>" class='btn btn-default'>D</a>
                    <% end %>
                  <% end %>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
